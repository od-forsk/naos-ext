{
  "name": "naos",
  "version": "0.0.1",
  "publisher": "forsk-sas",
  "displayName": "NAOS",
  "description": "NAOS extension for VSCode.",
  "icon": "resources/naos.png",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "NAOS",
    "RAN",
    "Network"
  ],
  "activationEvents": [
    "onCommand:workbench.action.tasks.runTask"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "naos.user.add",
        "category": "NAOS",
        "title": "Add user",
        "icon": "$(person-add)"
      },
      {
        "command": "naos.user.delete",
        "category": "NAOS",
        "title": "Delete user",
        "icon": "$(trash)"
      },
      {
        "command": "naos.team.add",
        "category": "NAOS",
        "title": "Add team",
        "icon": "$(add)"
      },
      {
        "command": "naos.team.delete",
        "category": "NAOS",
        "title": "Delete team",
        "icon": "$(trash)"
      },
      {
        "command": "naos.team.addUser",
        "category": "NAOS",
        "title": "Add a user to the team",
        "icon": "$(person-add)"
      },
      {
        "command": "naos.team.removeUser",
        "category": "NAOS",
        "title": "Remove a user from the team",
        "icon": "$(remove)"
      },
      {
        "command": "naos.refresh",
        "category": "NAOS",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "naos",
          "title": "NAOS",
          "icon": "resources/naos.svg"
        }
      ]
    },
    "views": {
      "naos": [
        {
          "id": "naos.users",
          "name": "users"
        },
        {
          "id": "naos.teams",
          "name": "teams"
        },
        {
          "id": "naos.instances",
          "name": "instances"
        },
        {
          "id": "naos.projects",
          "name": "projects"
        },
        {
          "id": "naos.workspaces",
          "name": "workspaces"
        },
        {
          "id": "naos.geofiles",
          "name": "geofiles"
        },
        {
          "id": "naos.jobs",
          "name": "jobs"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "naos.user.add",
          "group": "navigation",
          "when": "view == naos.users"
        },
        {
          "command": "naos.team.add",
          "group": "navigation",
          "when": "view == naos.teams"
        }
      ],
      "view/item/context": [
        {
          "command": "naos.user.delete",
          "group": "inline",
          "when": "view == naos.users"
        },
        {
          "command": "naos.team.delete",
          "group": "inline",
          "when": "view == naos.teams && viewItem === naos.team"
        },
        {
          "command": "naos.team.addUser",
          "group": "inline",
          "when": "view == naos.teams && viewItem === naos.team"
        },
        {
          "command": "naos.team.removeUser",
          "group": "inline",
          "when": "view == naos.teams && viewItem === naos.user"
        }
      ]
    },
    "configuration": {
      "title": "NAOS",
      "properties": {
        "naos.gatewayURL": {
          "type": "string",
          "default": "http://localhost:9090",
          "description": "URL of the NAOS gateway"
        }
      }
    },
    "taskDefinitions": [
      {
        "type": "naos-job",
        "properties": {
          "jobId": {
            "type": "string",
            "description": "NAOS Job ID"
          },
          "priority": {
            "type": "integer",
            "minimum": 1,
            "maximum": 9,
            "description": "job scheduling priority"
          }
        },
        "required": [
          "jobId"
        ]
      }
    ],
    "viewsWelcome": [
      {
        "view": "naos.teams",
        "contents": "test welcome view."
      }
    ],
    "walkthroughs": [
      {
        "id": "naos.tuto",
        "title": "Get Started with NAOS!",
        "description": "Get Started with NAOS!",
        "icon": "resources/naos.svg",
        "steps": [
          {
            "id": "runcommand",
            "title": "Run command",
            "description": "This step will run a command and check off once it has been run.\n[Run Command](command:naos.user.add)",
            "completionEvents": [
              "onCommand:naos.user.add"
            ],
            "media": {
              "image": "resources/naos.svg",
              "altText": "NAOS Logo"
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "genclient": "sh scripts/genclient.sh",
    "package": "rm -Rf out/ && vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "openapi-typescript-codegen": "^0.29.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "uuid": "^10.0.0"
  }
}
