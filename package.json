{
  "name": "naos",
  "version": "1.0.0",
  "publisher": "forsk-sas",
  "displayName": "NAOS",
  "description": "NAOS extension for VSCode.",
  "icon": "resources/naos.png",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "NAOS",
    "RAN",
    "Network"
  ],
  "activationEvents": [
    "onCommand:workbench.action.tasks.runTask"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "naos.user.add",
        "category": "NAOS",
        "title": "Add user",
        "icon": "$(add)"
      },
      {
        "command": "naos.user.delete",
        "category": "NAOS",
        "title": "Delete user",
        "icon": "$(trash)"
      },
      {
        "command": "naos.team.add",
        "category": "NAOS",
        "title": "Add team",
        "icon": "$(add)"
      },
      {
        "command": "naos.team.delete",
        "category": "NAOS",
        "title": "Delete team",
        "icon": "$(trash)"
      },
      {
        "command": "naos.team.addUser",
        "category": "NAOS",
        "title": "Add a user to the team",
        "icon": "$(person-add)"
      },
      {
        "command": "naos.team.removeUser",
        "category": "NAOS",
        "title": "Remove a user from the team",
        "icon": "$(remove)"
      },
      {
        "command": "naos.instance.add",
        "category": "NAOS",
        "title": "Add NAOS Instance.",
        "icon": "$(add)"
      },
      {
        "command": "naos.instance.delete",
        "category": "NAOS",
        "title": "Free NAOS Instance.",
        "icon": "$(trash)"
      },
      {
        "command": "naos.job.delete",
        "category": "NAOS",
        "title": "Remove a NAOS Job.",
        "icon": "$(trash)"
      },
      {
        "command": "naos.job.run",
        "category": "NAOS",
        "title": "Run a NAOS Job.",
        "icon": "$(run)"
      },
      {
        "command": "naos.copyid",
        "category": "NAOS",
        "title": "Copy the item UUID.",
        "icon": "$(key)"
      },
      {
        "command": "naos.refresh",
        "category": "NAOS",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "naos.task.getMessages",
        "category": "NAOS",
        "title": "Retrieve Task messages",
        "icon": "$(comment-discussion)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "naos",
          "title": "NAOS",
          "icon": "resources/naos.svg"
        }
      ]
    },
    "views": {
      "naos": [
        {
          "id": "naos.services",
          "name": "services",
          "icon": "$(run)"
        },
        {
          "id": "naos.users",
          "name": "users",
          "icon": "$(person)"
        },
        {
          "id": "naos.teams",
          "name": "teams",
          "icon": "$(organization)"
        },
        {
          "id": "naos.instances",
          "name": "instances",
          "icon": "$(gear)"
        },
        {
          "id": "naos.workareas",
          "name": "workareas",
          "icon": "$(database)"
        },
        {
          "id": "naos.geofiles",
          "name": "geofiles",
          "icon": "$(globe)"
        },
        {
          "id": "naos.jobs",
          "name": "jobs",
          "icon": "$(wrench)"
        },
        {
          "id": "naos.coverages",
          "name": "coverages",
          "icon": "$(graph)"
        },
        {
          "id": "naos.artifacts",
          "name": "artifacts",
          "icon": "$(gift)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "naos.user.add",
          "group": "navigation",
          "when": "view == naos.users"
        },
        {
          "command": "naos.team.add",
          "group": "navigation",
          "when": "view == naos.teams"
        },
        {
          "command": "naos.instance.add",
          "group": "navigation",
          "when": "view == naos.instances"
        },
        {
          "command": "naos.refresh",
          "group": "navigation",
          "when": "view =~ /^naos\\./"
        }
      ],
      "view/item/context": [
        {
          "command": "naos.copyid",
          "group": "inline",
          "when": "view == naos.users || view == naos.teams || view == naos.instances || view == naos.jobs || view == naos.workareas || view == naos.geofiles || view == naos.coverages || view == naos.artifacts"
        },
        {
          "command": "naos.user.delete",
          "group": "inline",
          "when": "view == naos.users"
        },
        {
          "command": "naos.team.delete",
          "group": "inline",
          "when": "view == naos.teams && viewItem === naos.team"
        },
        {
          "command": "naos.team.delete",
          "group": "rest",
          "when": "view == naos.teams && viewItem === naos.team"
        },
        {
          "command": "naos.team.addUser",
          "group": "inline",
          "when": "view == naos.teams && viewItem === naos.team"
        },
        {
          "command": "naos.team.removeUser",
          "group": "inline",
          "when": "view == naos.teams && viewItem === naos.user"
        },
        {
          "command": "naos.instance.delete",
          "group": "inline",
          "when": "view == naos.instances"
        },
        {
          "command": "naos.job.delete",
          "group": "inline",
          "when": "view == naos.jobs && viewItem === naos.job"
        },
        {
          "command": "naos.job.run",
          "group": "inline",
          "when": "view == naos.jobs && viewItem === naos.job"
        },
        {
          "command": "naos.task.getMessages",
          "group": "inline",
          "when": "view == naos.jobs && viewItem === naos.task"
        }
      ]
    },
    "configuration": {
      "title": "NAOS",
      "properties": {
        "naos.gatewayURL": {
          "type": "string",
          "default": "http://localhost:9090/v1/",
          "description": "URL of the NAOS gateway"
        },
        "naos.messages.minloglevel": {
          "type": "integer",
          "minimum": 0,
          "maximum": 50,
          "default": 20,
          "description": "Minimum messages log level to be displayed in task terminal."
        }
      }
    },
    "taskDefinitions": [
      {
        "type": "naos-job",
        "properties": {
          "jobId": {
            "type": "string",
            "description": "NAOS Job ID"
          },
          "priority": {
            "type": "integer",
            "minimum": 1,
            "maximum": 9,
            "description": "job scheduling priority"
          }
        },
        "required": [
          "jobId"
        ]
      }
    ],
    "viewsWelcome": [
      {
        "view": "naos.services",
        "contents": "No item found."
      },
      {
        "view": "naos.users",
        "contents": "No item found."
      },
      {
        "view": "naos.teams",
        "contents": "No item found."
      },
      {
        "view": "naos.instances",
        "contents": "No item found."
      },
      {
        "view": "naos.workareas",
        "contents": "No item found."
      },
      {
        "view": "naos.geofiles",
        "contents": "No item found."
      },
      {
        "view": "naos.jobs",
        "contents": "No item found."
      },
      {
        "view": "naos.coverages",
        "contents": "No item found."
      },
      {
        "view": "naos.artifacts",
        "contents": "No item found."
      }
    ],
    "walkthroughs": [
      {
        "id": "naos.tuto",
        "title": "Get Started with NAOS!",
        "description": "Get Started with NAOS!",
        "icon": "resources/naos.svg",
        "steps": [
          {
            "id": "runcommand",
            "title": "Run command",
            "description": "This step will run a command and check off once it has been run.\n[Run Command](command:naos.user.add)",
            "completionEvents": [
              "onCommand:naos.user.add"
            ],
            "media": {
              "image": "resources/naos.svg",
              "altText": "NAOS Logo"
            }
          }
        ]
      }
    ],
    "colors": [
      {
        "id": "naos.serviceStatus.valid",
        "description": "Color for a valid NAOS service icon.",
        "defaults": {
          "light": "#00dd30",
          "dark": "#00af26",
          "highContrast": "#00ff00"
        }
      },
      {
        "id": "naos.serviceStatus.invalid",
        "description": "Color for an invalid NAOS service icon.",
        "defaults": {
          "dark": "#dd0000",
          "light": "#af0000",
          "highContrast": "#ff0000"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "genclient": "sh scripts/genclient.sh",
    "package": "rm -Rf out/ && vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.79.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "openapi-typescript-codegen": "^0.29.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "uuid": "^10.0.0",
    "ws": "^8.18.0"
  }
}
