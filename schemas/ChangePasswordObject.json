{
  "title": "Change password object",
  "type": "object",
  "required": [
    "old_password",
    "new_password",
    "confirm_new"
  ],
  "properties": {
    "old_password": {
      "description": "Current password",
      "type": "string",
      "writeOnly": true
    },
    "new_password": {
      "description": "New password",
      "type": "string",
      "writeOnly": true
    },
    "confirm_new": {
      "description": "Confirmed new password. Must match 'new_password'.",
      "type": "string",
      "writeOnly": true
    }
  },
  "$schema": "http://json-schema.org/schema#"
}